<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="aboutus_menu" model="website.menu">
			<field name="name">About Us</field> <!-- Name of the menu-->
			<field name="url">/page/aboutus/</field>
			<field name="parent_id" ref="website.main_menu"/>
			<field name="sequence" type="int">11</field>
			<!--sequence of the menu-->
		</record>
		
		<template id = "singla_website_aboutus" inherit_id = "website.aboutus" name= "SSAI AboutUs" >
			<xpath expr = "//div[@id='wrap']" position="replace">
			   <div id="banner-area" class="banner-area" style="background-image:url(/singla_website/static/src/img/banner/banner1.jpg)">
			      <div class="banner-text">
			         <div class="container">
			            <div class="row">
			               <div class="col-xs-12">
			                  <div class="banner-heading">
			                     <h1 class="banner-title">About Us</h1>
			                  </div>
			               </div><!-- Col end -->
			            </div><!-- Row end -->
			         </div><!-- Container end -->
			      </div><!-- Banner text end -->
			   </div><!-- Banner area end -->
			   
			   <section id="main-container" class="main-container">
			      <div class="container">
			         <div class="row">
			            <div class="col-md-6">
			               <blockquote><p>It is your work in life that is the ultimate seduction.</p><p class = "text-right">-Pablo Picasso</p></blockquote>
			               <p class = "text-justify">Singla Steel &amp; Allied Industries was established in the year of 1982 by Late Sh. Rajeshwar Parshad Goyal.
			               Our years of experience, adaptation to varying demand,  combined with technological advancement has helped us stand out in the Alloy Steel Flats Rolling Industry. 
			               We are not a production centric unit.
			               We are a  process centric unit delivering not only quality,  but delivering quality with consistent and repeatable results in time.</p>
			            </div><!-- Col end -->
			            <div class="col-md-6">
			               <div id="page-slider" class="owl-carousel owl-theme page-slider small-bg">
			                  <div class="item" style="background-image:url(/singla_website/static/src/img/slider-pages/slide-page1.jpg)">
			                     <div class="container">
			                        <div class="box-slider-content">
			                           <div class="box-slider-text">
			                              <h2 class="box-slide-title">Leadership</h2>
			                           </div>    
			                        </div>
			                     </div>
			                  </div><!-- Item 1 end -->
			
			                  <div class="item" style="background-image:url(/singla_website/static/src/img/slider-pages/slide-page2.jpg)">
			                     <div class="container">
			                        <div class="box-slider-content">
			                           <div class="box-slider-text">
			                              <h2 class="box-slide-title">Relationships</h2>
			                           </div>    
			                        </div>
			                     </div>
			                  </div><!-- Item 1 end -->
			
			                  <div class="item" style="background-image:url(/singla_website/static/src/img/slider-pages/slide-page3.jpg)">
			                     <div class="container">
			                        <div class="box-slider-content">
			                           <div class="box-slider-text">
			                              <h2 class="box-slide-title">Performance</h2>
			                           </div>    
			                        </div>
			                     </div>
			                  </div><!-- Item 1 end -->
			               </div><!-- Page slider end-->          
			            </div><!-- Col end -->
			         </div><!-- Content row end -->
			      </div><!-- Container end -->
			   </section><!-- Main container end -->
				<section class="main-container">
					<div class = "container">
				         <div class = "row">
				         	 <div class = "col-md-6">
							   <h3 class="column-title">Who We Are</h3>
							   <p class = "text-justify">We are manufacturers of Alloy Steel Flat Bars. We have a annual capacity to manfacture 25000MT per annum. We cater to various industries such as Automotive Industry, Agricultural Equipments Industry, Forging Industry, Construction Equipments Industry, Handtool Industry.
							   In our endeavour to provide consistency to our customers we are guided by three circles.
							   </p>			         		
		         	 		</div> 
				         	<div class = "col-md-6">
				         		<img class="img-responsive" src="/singla_website/static/src/img/hedgehog-concept.jpeg" alt="" />
				         	</div>
			         </div> <!-- Content Row end -->					
					</div> <!-- Container end -->
				</section> <!--  Main container end -->			   
				
				<section class="main-container">
					<div class = "container">
				         <div class = "row">
				         	 <div class = "col-md-6">
							   <h3 class="column-title">Infrastructure &amp; Facilities</h3>
									<ul class="list-arrow">
										<li>14” Rough stand and 11” Rolling mill</li>
										<li>7MT Re-Heating Furnace</li>
										<li>110 ft Cooling Bed</li>
										<li>Swing Grinder for Dressing of Ingot/Billets</li>
										<li>Metallurgical Analysis Laboratory</li>
										<li>Brinell Hardness Testing Machine</li>
										<li>250MT H-type Press for Clear Cut Requirements</li>
										<li>XRF Analyzer</li>
										<li>Spectrometer</li>
										<li>Ultrasonic Tester</li>										
									</ul>																   
		         	 		</div> 
				         	<div class = "col-md-6">
				         		<img class="img-responsive" src="/singla_website/static/src/img/infra_facility.jpg" alt="" />
				         	</div>
			         </div> <!-- Content Row end -->					
					</div> <!-- Container end -->
				</section> <!--  Main container end -->			   				
			   
			   <div class = "oe_structure"></div>
		   </xpath>
		</template>		
	</data>
</odoo>